{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
    <h1>Liste</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Sous-titre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.title }}</td>
                <td>{{ recipe.subtitle }}</td>
                <td>
                    <a href="{{ path('recipe_show', {'id': recipe.id}) }}">Voir</a>
                    <a href="{{ path('recipe_edit', {'id': recipe.id}) }}">Modifier</a>
                    {{ include('recipe/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('recipe_new') }}" class="btn btn-success">Cr√©er un nouveau</a>
{% endblock %}
