{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ recipe.title }}</td>
            </tr>
            <tr>
                <th>Sous-titre</th>
                <td>{{ recipe.subtitle }}</td>
            </tr>
            <tr>
                <th>Ingredients </th>
                <td>{% for ingredient in recipe.ingredients %} {{ ingredient.name }} , {% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('recipe_index') }}">Retourner</a>

    <a href="{{ path('recipe_edit', {'id': recipe.id}) }}">Modifier</a>

    {{ include('recipe/_delete_form.html.twig') }}
{% endblock %}
